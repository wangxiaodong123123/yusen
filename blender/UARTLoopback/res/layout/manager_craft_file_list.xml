<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="11"
    android:orientation="vertical" 
    android:background="@android:color/white">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
		android:background="@drawable/data_manager_title_bar"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
		 <!-- fuction:title bar --> 
	    <TextView 
	        android:textSize="25.0sp" 
			android:layout_width="0dp" 
			android:layout_weight="8.1"
			android:layout_height="match_parent" 
			android:textColor="@color/baise"
			android:gravity="center_vertical"
			android:id="@+id/mgr_title_id"
		/>
	    <Button 
			android:layout_width="0dp" 
			android:layout_weight="1.2"
			android:layout_height="match_parent"
			android:textSize="20sp"
			android:background="@drawable/btn_create_bg"
			android:id="@+id/mgr_print_bt"
			android:text="记录表打印"    
		/>
    </LinearLayout>
    <ScrollView 
      	android:layout_width="match_parent"
   		android:layout_height="0dp"
   		android:layout_weight="10.05"
   		android:id="@+id/mgr_scrollview"
      	>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
   <LinearLayout 
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_gravity="center"
	   	android:orientation="horizontal"
	   	android:layout_marginTop="10dip">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mgr_project_title"
	        android:textSize="25sp"
		    android:textColor="@android:color/black"/>
	   	<LinearLayout 
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:orientation="vertical"
	   	    >
	   	    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/mgr_project_name"
		        android:textSize="25sp"
		        android:textColor="@android:color/black"/>
		    <View 
			    android:layout_width="match_parent"
			    android:layout_height="1.5dip"
		        android:background="@android:color/black"
		        android:visibility="visible"/>
	   	</LinearLayout>
	</LinearLayout> 
   <!-- fuction:table name --> 
   <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mgr_craft_title_name"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="20dip"
        android:textColor="@android:color/black"/>	    		    			
   
   <!-- fuction:parameter table text -->   
   <LinearLayout 
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_marginLeft="9dip"
	   	android:orientation="horizontal"
	   	android:layout_marginTop="2dip">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/mgr_craft_engin_text"
	        android:text="@string/craft_engin_text"
	        android:textSize="20sp"
	        android:textColor="@android:color/black"/>
	   	<LinearLayout 
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:orientation="vertical"
	   	    >
	   	    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/mgr_craft_engin_name"
		        android:textSize="20sp"
		        android:textColor="@android:color/black"/>
		    <View 
			    android:layout_width="match_parent"
			    android:layout_height="1.5dip"
		        android:background="@android:color/black"
		        android:visibility="visible"/>
	   	</LinearLayout>
	</LinearLayout> 
    <!-- fuction:craft parameters title -->    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="533"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="520"
	        android:layout_height="1.5dp"
	        android:layout_marginTop="10dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
    </LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="533"
    	android:orientation="horizontal">
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
	        />
		<!-- 搅拌序号 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dip"
            android:layout_weight="125"
            android:text="搅拌序号"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_title_blender_seq"
			android:textColor="@android:color/black"/>
        <!-- 搅拌日期 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="95"
            android:text="搅拌日期"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_title_blender_date"
			android:textColor="@android:color/black"/>
       <!-- 拌和时间 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dp"
            android:layout_weight="85"
            android:text="拌和时间"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_title_blender_time"
			android:textColor="@android:color/black"/>
        <!-- 水泥重量 -->
        <View 
           android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dp"
            android:layout_weight="60"
            android:text="水泥重量"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_title_cement_weigh"
			android:textColor="@android:color/black"/>
        <!-- 加水量（KG） -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="80"
            android:text="加水量（KG）"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>
        <!-- 拌和重量 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="65"
            android:text="拌和重量"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>     
		<View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
        	android:background="@android:color/black"
        	android:visibility="visible"/>	   	
    </LinearLayout>     	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="533"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="520"
	        android:layout_height="1.5dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
    </LinearLayout>    
	   <!-- function:table list      -->        
	   	<com.ysdata.blender.view.CustomListView 
	   	    android:orientation="vertical"
		    android:layout_width="wrap_content"   
	        android:layout_height="wrap_content" 
		    android:listSelector="@android:color/transparent"
			android:dividerHeight="0dp"		   
			android:stackFromBottom="true"
		    android:id="@+id/mgr_craft_table_lv"
		    />   	
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="533"
    	android:orientation="horizontal">
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="7"
	        />
		<!-- 搅拌序号 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dip"
            android:layout_weight="221"
            android:text="合计"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_title_blender_seq"
			android:textColor="@android:color/black"/>    
       <!-- 拌和时间 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dp"
            android:layout_weight="85.5"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_total_blender_time"
			android:textColor="@android:color/black"/>
        <!-- 水泥重量 -->
        <View 
           android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="121dp"
            android:layout_weight="60"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_total_cement_weigh"
			android:textColor="@android:color/black"/>
        <!-- 加水量（KG） -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="80"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_total_water_weigh"
			android:textColor="@android:color/black"/>
        <!-- 拌和重量 -->
        <View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1.5"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="65"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/mgr_total_all_weigh"
			android:textColor="@android:color/black"/>   
		<View 
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:layout_weight="1"
        	android:background="@android:color/black"
        	android:visibility="visible"/>	     	
    </LinearLayout>     	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="533"
        android:layout_marginBottom="20dip"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="520"
	        android:layout_height="1.5dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
    </LinearLayout>
      </LinearLayout> 
	</ScrollView>     
</LinearLayout>