<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:orientation="vertical" 
    android:id="@+id/layout_id"
    android:background="@drawable/create_bg">
    
    <!-- fuction:title bar --> 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
		 <TextView 
	        android:textSize="25.0dp" 
			android:layout_width="0dp" 
			android:layout_weight="7.1"
			android:layout_height="match_parent"
	        android:id="@+id/craft_create_title_id"
			android:textColor="#5a5191"
			android:gravity="center_vertical"
		/>
		
		<TextView 
	        android:textSize="25sp" 
			android:layout_width="0dp" 
			android:layout_weight="2.2"
			android:layout_height="match_parent" 
			android:textColor="@color/title"
			android:gravity="center"
			android:id="@+id/btStatus_title_id"
		/> 
    </LinearLayout>
    <ScrollView 
       	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="10.05"
    	android:id="@+id/craft_scrollview"
       >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >	
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:weightSum="9"
			android:layout_marginTop="5dp"
		    android:orientation="horizontal" 
		    >	
		    <TextView 
		        android:layout_width="0dp"
		        android:layout_weight="6"
		        android:layout_height="match_parent"
		        />
		    <Button 
				android:layout_width="0dp"
				android:layout_weight="1.2" 
				android:layout_height="match_parent"
				android:textSize="20sp"
				android:background="@drawable/btn_create_bg"
				android:id="@+id/craft_search_bt"
				android:text="工段查询"    
			/>
		    <Button 
		      	android:layout_width="0dp"
		      	android:layout_weight="1.8" 
				android:layout_height="match_parent"
				android:textSize="20sp"
				android:id="@+id/craft_data_transfer_bt"
				android:text="注浆工艺参数传输"  
				android:background="@drawable/btn_create_bg" 
		       />
	    </LinearLayout>
  
   <!-- fuction:table name --> 
   <TextView 
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/craft_title_name"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>
   <LinearLayout 
       android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:weightSum="3"
	   android:orientation="horizontal"
       >
		<TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.2"
        	android:layout_height="match_parent"
	   	    />    
       	<!-- fuction:eng name、mileage name、people name、date--> 
	   	<LinearLayout
		    android:layout_width="0dp"
		    android:layout_weight="1.5"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="10dp"
		    >
		    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="horizontal">
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/craft_engin_text"
			        android:text="@string/craft_engin_text"
			        android:textSize="16sp"
			        android:textColor="@android:color/black"/>
			    
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/craft_engin_name"
				        android:textSize="16sp"
				        android:textColor="@android:color/black"/>
				    <View 
					    android:layout_width="match_parent"
					    android:layout_height="1dip"
				        android:id="@+id/craft_engin_line"
				        android:background="@android:color/black"
				        android:visibility="visible"/>
			    </LinearLayout>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_marginTop="20dip">
			    <TextView 
			        android:id="@+id/craft_mileage_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/craft_mix_date_text"
			        android:textSize="16sp"
			        android:textColor="@android:color/black"/>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/craft_mileage_name"
				        android:textSize="16sp"
				        android:textColor="@android:color/black"/>
				    <View 
					    android:layout_width="match_parent"
					    android:layout_height="1dip"
				        android:id="@+id/craft_mileage_line"
				        android:background="@android:color/black"
				        android:visibility="visible"/>
				</LinearLayout>    
		    </LinearLayout>
		   <!--  create craft people -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_marginTop="20dip">
			    <TextView 
			        android:id="@+id/craft_people_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/mix_ratio_text"
			        android:textSize="16sp"
			        android:textColor="@android:color/black"/>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/craft_people_name"
				        android:textSize="16sp"
				        android:textColor="@android:color/black"/>
				    <View 
					    android:layout_width="match_parent"
					    android:layout_height="1dip"
				        android:id="@+id/craft_people_line"
				        android:background="@android:color/black"
				        android:visibility="visible"/>
				</LinearLayout>      
		    </LinearLayout>   
		    <!--  date -->
		    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal"
		    	android:layout_marginTop="20dip">
			    <TextView 
			        android:id="@+id/craft_date_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/mix_weight_text"
			        android:textSize="16sp"
			        android:textColor="@android:color/black"/>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        >
				    <TextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:id="@+id/craft_date_name"
				        android:textSize="16sp"
				        android:textColor="@android:color/black"/>
				    <View 
					    android:layout_width="match_parent"
					    android:layout_height="1dip"
				        android:id="@+id/craft_date_line"
				        android:background="@android:color/black"
				        android:visibility="visible"/>
				</LinearLayout>    
		    </LinearLayout>   
		</LinearLayout>
		<TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.1"
        	android:layout_height="match_parent"
	   	    />
		<LinearLayout 
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    >
		    <!-- fuction:draw picture title --> 
		   <TextView 
		        android:id="@+id/item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:text="@string/craft_picture_title_name"
		        android:textSize="16sp"
		        android:textColor="@android:color/black"/>
		   <!-- fuction:draw picture ImageView --> 
		   <View
		        android:layout_width="338px"
		        android:layout_height="1dp"
		        android:layout_marginTop="10dp"
		        android:background="@android:color/black"
		        android:visibility="visible"/> 
		   <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:orientation="horizontal">
		        <View 
		            android:layout_width="1dp"
		            android:layout_height="226px"
		        	android:background="@android:color/black"
		        	android:visibility="visible"/>
			    <ImageView
			        android:id="@+id/craft_imageview"
			        android:layout_width="336px"
			        android:layout_height="226px"
			        android:background="@android:color/white" />
		        <View 
		            android:layout_width="1dp"
		            android:layout_height="226px"
		        	android:background="@android:color/black"
		        	android:visibility="visible"/>    
		   </LinearLayout>  
		   <View
		       android:layout_width="338px"
		       android:layout_height="1dp"
		       android:background="@android:color/black"
		       android:visibility="visible"/>    
		</LinearLayout>
   </LinearLayout>
   
   <!-- fuction:craft parameter text -->   
<!--    <TextView 
        android:id="@+id/craft_param_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:text="@string/craft_param_text_name"
        android:textSize="16sp"
        android:textColor="@android:color/black"/>  -->
   <!-- fuction:the number of anchors -->     
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:weightSum="1024"
       android:orientation="horizontal"
       >
	   <TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="12"
        	android:layout_height="match_parent"
	   	    />
	    <LinearLayout
	        android:layout_width="0dp"
	   	    android:layout_weight="1012"
        	android:layout_height="match_parent"
        	>
	    <TextView 
	        android:id="@+id/craft_water_ratio_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/craft_water_ratio_text"
	        android:textSize="16sp"
	        android:textColor="@android:color/black"/>
	    <LinearLayout 
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/craft_water_ratio_tv"
		        android:textSize="16sp"
		        android:textColor="@android:color/black"/>
		   
		    <View 
			    android:layout_width="match_parent"
			    android:layout_height="1dip"
		        android:id="@+id/craft_water_ratio_line"
		        android:background="@android:color/black"
		        android:visibility="visible"/>
    	</LinearLayout> 
	    <TextView 
	        android:id="@+id/craft_anchor_amount_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/craft_anchor_amount_text"
	        android:textSize="16sp"
	        android:layout_marginLeft="30dp"
	        android:textColor="@android:color/black"/>
		<LinearLayout 
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >		    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/craft_anchor_amount_tv"
		        android:textSize="16sp"
		        android:textColor="@android:color/black"/>    
		    <View 
			    android:layout_width="match_parent"
			    android:layout_height="1dip"
		        android:id="@+id/craft_anchor_amount_line"
		        android:background="@android:color/black"
		        android:visibility="visible"/>
    	</LinearLayout>
    	</LinearLayout>
   </LinearLayout> 
    <!-- fuction:craft parameters title -->   
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1026"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            />
	    <View
	        android:layout_width="0dp"
            android:layout_weight="1002"
	        android:layout_height="1dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
    </LinearLayout> 
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1026"
    	android:orientation="horizontal">
	    <TextView 
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            />
		<!-- 置筋编号 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="150"
            android:layout_height="wrap_content"
            android:text="@string/craft_dev_seq_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_dev_seq"
			android:textColor="@android:color/black"/>
        <!-- 置筋类型 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="120"
            android:layout_height="wrap_content"
            android:text="@string/craft_dev_type_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_dev_type"
			android:textColor="@android:color/black"/>
       <!-- 置筋型号 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="105"
            android:layout_height="wrap_content"
            android:text="@string/craft_dev_model_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_dev_model"
			android:textColor="@android:color/black"/>
       <!-- 设计置筋长度 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="75"
            android:layout_height="wrap_content"
            android:text="@string/craft_theore_len_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_design_len"
			android:textColor="@android:color/black"/>  
       <!-- 设计孔口注浆压力 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:text="@string/craft_theore_pressure_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_design_press"
			android:textColor="@android:color/black"/>  	
        <!-- 设计保压时间 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="wrap_content"
            android:text="@string/craft_hold_time_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_hold_time"
			android:textColor="@android:color/black"/>
        <!-- 理论注浆量 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:text="@string/craft_theore_cap_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>
        <!-- 每米理论注浆量 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:text="@string/craft_cap_unit_meter_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_cap_unit_meter"
			android:textColor="@android:color/black"/>
        <!-- 单位时间注浆泵流量 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:text="@string/craft_cap_unit_hour_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_cap_unit_hour"
			android:textColor="@android:color/black"/>
        <!-- 备注 -->
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="126.5"
            android:layout_height="wrap_content"
            android:text="@string/craft_remark_text"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/title_remark"
			android:textColor="@android:color/black"/>
        <View 
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/> 	
    </LinearLayout>     	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1026"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            />
	    <View
	        android:layout_width="0dp"
            android:layout_weight="1002"
	        android:layout_height="1dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>   
	 </LinearLayout>          
   <!-- function:table list      -->        
   	<com.ysdata.blender.view.CustomListView 
   	    android:orientation="vertical"
		android:divider="@android:color/black"  
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="20dp"
	    android:listSelector="@android:color/transparent"
