<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="11"
    android:orientation="vertical" 
    android:background="@android:color/white">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
		android:background="@drawable/data_manager_title_bar"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
		 <!-- fuction:title bar --> 
	    <TextView 
	        android:textSize="25.0sp" 
			android:layout_width="0dp" 
			android:layout_weight="4.3"
			android:layout_height="match_parent" 
			android:textColor="@color/baise"
			android:gravity="center_vertical"
			android:id="@+id/mgr_title_id"
		/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.05"
        android:orientation="vertical"
        >
   <LinearLayout 
	    android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_gravity="center"
	   	android:orientation="horizontal"
	   	android:layout_marginTop="20dip">
		<TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mgr_project_title"
	        android:textSize="25sp"
		    android:textColor="@android:color/black"/>
	   	<LinearLayout 
	   	    android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:orientation="vertical"
	   	    >
	   	    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/mgr_project_name"
		        android:textSize="25sp"
		        android:textColor="@android:color/black"/>
		    <View 
			    android:layout_width="match_parent"
			    android:layout_height="1.5dip"
		        android:background="@android:color/black"
		        android:visibility="visible"/>
	   	</LinearLayout>
	</LinearLayout> 
   <!-- fuction:table name --> 
   <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现场水泥（砂）浆搅拌详情表"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="20dip"
        android:textColor="@android:color/black"/>   
   <LinearLayout 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="10"
       android:orientation="horizontal"
       >
       <TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
	<RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="6"
    	android:layout_height="wrap_content">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/mgr_craft_engin_text"
        	android:text="@string/craft_engin_text"
        	android:textSize="20sp"
        	android:textColor="@android:color/black"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/mgr_craft_engin_name"
        	android:textSize="20sp"
        	android:layout_toRightOf="@id/mgr_craft_engin_text"
        	android:textColor="@android:color/black"/>
	    <View 
		    android:layout_width="match_parent"
		    android:layout_height="1.5dip"
	        android:id="@+id/craft_engin_line"
	        android:layout_toRightOf="@id/mgr_craft_engin_text"
	        android:layout_below="@id/mgr_craft_engin_name"
	        android:background="@android:color/black"
	        android:visibility="visible"/>
    </RelativeLayout>
   </LinearLayout>
   <LinearLayout 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="10"
       android:orientation="horizontal"
       >
       <TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
    <RelativeLayout 
        android:layout_width="0dp"
    	android:layout_weight="3"
    	android:layout_height="wrap_content"
    	>
	    <TextView 
	        android:id="@+id/mgr_craft_mix_date_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/craft_mix_date_text"
        	android:textSize="20sp"
        	android:textColor="@android:color/black"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/mgr_mix_date_id"
	        android:textSize="20sp"
	        android:layout_toRightOf="@id/mgr_craft_mix_date_text"
	        android:textColor="@android:color/black"/>
	    <View 
		    android:layout_width="match_parent"
		    android:layout_height="1.5dip"
	        android:id="@+id/mgr_mix_date_line"
	        android:layout_toRightOf="@id/mgr_craft_mix_date_text"
	        android:layout_below="@id/mgr_mix_date_id"
	        android:background="@android:color/black"
	        android:visibility="visible"/>
    </RelativeLayout>
    <TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
 	<RelativeLayout 
        android:layout_width="0dp"
    	android:layout_weight="2"
    	android:layout_height="wrap_content"
		>
	    <TextView 
	        android:id="@+id/mgr_mix_ratio_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/mix_ratio_text"
	        android:textSize="20sp"
	        android:textColor="@android:color/black"/>
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/mgr_mix_ratio"
	        android:textSize="20sp"
	        android:layout_toRightOf="@id/mgr_mix_ratio_text"
	        android:textColor="@android:color/black"/>			    
	    <View 
		    android:layout_width="match_parent"
		    android:layout_height="1.5dip"
	        android:id="@+id/mix_ratio_line"
	        android:layout_toRightOf="@id/mgr_mix_ratio_text"
	        android:layout_below="@id/mgr_mix_ratio"
	        android:background="@android:color/black"
	        android:visibility="visible"/>
    </RelativeLayout>      
    </LinearLayout>	
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="8"
	        android:layout_height="1.5dp"
	        android:layout_marginLeft="-1dp"
	        android:layout_marginRight="1dp"
	        android:background="@android:color/black"
	        />  
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        >
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="序号"
           android:textSize="20sp"
           android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="开始时间"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="结束时间"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="水泥重量"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="加水量（KG）"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:text="拌和重量"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
   </LinearLayout>
       <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="8"
	        android:layout_height="1.5dp"
	        android:layout_marginLeft="-1dp"
	        android:layout_marginRight="1dp"
	        android:background="@android:color/black"
	        />  
    </LinearLayout>	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:orientation="horizontal"
        >
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_id"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_start_time"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_end_time"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_cement_weigh"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_water_weigh"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
 		<TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1.33"
           android:id="@+id/mgr_detail_weigh"
           android:textSize="20sp"
                      android:layout_gravity="center_vertical"
           android:gravity="center"
		   android:textColor="@android:color/black"
           />
 		<View 
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	/>
   </LinearLayout>
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="8"
	        android:layout_height="1.5dp"
	        android:layout_marginLeft="-1dp"
	        android:layout_marginRight="1dp"
	        android:background="@android:color/black"
	        />  
    </LinearLayout>	
    
    <LinearLayout 
   	    android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        >
     <TextView 
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           />		
    	<LinearLayout 
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="4"
    	    android:orientation="vertical"
    	    >
    	    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="搅拌效果图"
		        android:layout_gravity="center"
		        android:textColor="@android:color/black"/>
			<ImageView 
			    android:id="@+id/mgr_mix_result_pic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    />
    	</LinearLayout>
    	<LinearLayout 
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="4"
    	    android:orientation="vertical"
    	    >
			<TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="搅拌现场图"
		        android:layout_gravity="center"
		        android:textColor="@android:color/black"/>
			<ImageView 
			    android:id="@+id/mgr_mix_scene_pic"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    />
    	</LinearLayout>
    </LinearLayout>
    </LinearLayout>	
</LinearLayout>