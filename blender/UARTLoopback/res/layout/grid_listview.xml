  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" 
    android:background="@drawable/cloud_bg">
 
    <TextView 
        android:textSize="20.0dip" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:textColor="@color/title"
		android:text="管理员操作"
		android:paddingLeft="70dip"
		android:paddingTop="15dip"
	/> 
    
	 <RelativeLayout 	
	    android:id="@+id/AdminMain1_relativelayout"		
		android:layout_width="fill_parent" 
		android:layout_height="50dip"
		android:layout_marginTop="20dip"
		android:layout_marginRight="10dip"
		>   
		<ImageView 
		android:id="@+id/AdminMain1_imageview"
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/item_sel"
		android:visibility="gone"
	    />
    <TextView 
		        android:textSize="20.0dip" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="程序初始化"
				android:layout_marginLeft="20dip"
				android:layout_centerVertical="true"
				android:textColor="@android:color/white"/> 
    </RelativeLayout>	

	 	 <RelativeLayout 	
	    android:id="@+id/AdminMain2_relativelayout"		
		android:layout_width="fill_parent" 
		android:layout_height="50dip"
		android:layout_marginRight="10dip"
		>   
		<ImageView 
		android:id="@+id/AdminMain2_imageview"
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/item_sel"
		android:visibility="gone"
	    />
    <TextView 
		        android:textSize="20.0dip" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="修改管理员密码"
				android:layout_marginLeft="20dip"
				android:layout_centerVertical="true"
				android:textColor="@android:color/white"/> 
    </RelativeLayout>	
</LinearLayout>
