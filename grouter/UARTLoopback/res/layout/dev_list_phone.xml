<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:weightSum="11"
    android:orientation="vertical" 
    android:background="@drawable/collect_bg">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
		 <TextView 
	        android:textSize="25.0sp" 
			android:layout_width="0dp" 
			android:layout_weight="9.3"
			android:layout_height="match_parent" 
			android:gravity="center_vertical"
			android:textColor="@color/title"
			android:id="@+id/dev_list_title"
		/>
     </LinearLayout> 
    
    <RelativeLayout 	
        android:id="@+id/panel_relativelayout"	
		android:layout_width="fill_parent" 
		android:layout_height="50dp"
		android:layout_marginLeft="10dip"
		android:layout_marginTop="20dip"
		android:layout_marginRight="10dip"
		>   
	<ImageView 
	    android:id="@+id/panel_imageview"
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/item_sel"
		android:visibility="visible"
	    />
    <TextView 
		        android:textSize="22sp" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="集中式数据存储器"
				android:textColor="@android:color/white"
				android:layout_centerVertical="true"/> 
				
    
    </RelativeLayout>	
    
	 <RelativeLayout 	
	     android:id="@+id/sdcard_relativelayout"		
		android:layout_width="fill_parent" 
		android:layout_marginTop="10dip"
		android:layout_height="50dp"
		android:layout_marginLeft="10dp"
		>   
		<ImageView 
		android:id="@+id/sdcard_imageview"
	    	android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/item_sel"
		android:visibility="gone"
	    />
    <TextView 
		        	android:textSize="22sp" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="单元式定点数据存储器"
				android:layout_centerVertical="true"
				android:textColor="@android:color/white"/> 
				
   
    </RelativeLayout>	

</LinearLayout>
