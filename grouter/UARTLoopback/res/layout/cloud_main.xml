<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:background="@drawable/cloud_bg"
	>
	<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="57px"
        android:orientation="horizontal"
        >
		<TextView 
	        android:textSize="20sp" 
			android:layout_width="fill_parent" 
			android:layout_height="50dip" 
			android:textColor="@color/title"
			android:paddingLeft="70dip"
			android:paddingTop="15dip"
			android:text="云服务->云操作"
		/> 
		<LinearLayout 
		    android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true" 
		    >
			<TextView
			    android:layout_width="200dp" 
				android:layout_height="50dip" 
			    android:textSize="20sp"
			    android:id="@+id/user_info"
			    android:paddingTop="15dip"
			    android:textColor="@color/title"
			/>
			<Button
			    android:layout_width="150dp" 
				android:layout_height="50dip" 
				android:text="注销"
				android:background="@drawable/btn_create_bg" 
				android:id="@+id/usr_logout"
			/>
		    
		</LinearLayout>
    </RelativeLayout>
	<LinearLayout 	
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:gravity="center_horizontal"
		android:layout_marginTop="180dp"
		>   
		<LinearLayout 	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:orientation="vertical"
			>  
			<ImageButton 
			    android:layout_width="130dp"
			    android:layout_height="150dp"
			    android:id="@+id/download_imagebutton_id"
			    android:background="@drawable/download_icon"
			    />
			<TextView 
			    android:layout_width="130dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:textColor="@color/black"
			    android:textSize="22sp"
			    android:text="数据下载"
			    />
		</LinearLayout>
		<LinearLayout 	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dp"
			android:orientation="vertical"
			>  
			<ImageButton 
			    android:layout_width="130dp"
			    android:layout_height="150dp"
			    android:id="@+id/amend_imagebutton_id"
			    android:background="@drawable/amend_icon"
			    />
			<TextView 
			    android:layout_width="130dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:textColor="@color/black"
			    android:textSize="22sp"
			    android:text="参数修改"
			    />
		</LinearLayout>	
		<LinearLayout 	
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dp"
			android:orientation="vertical"
			>  
			<ImageButton 
			    android:layout_width="130dp"
			    android:layout_height="150dp"
			    android:id="@+id/uplaod_imagebutton_id"
			    android:background="@drawable/upload_icon"
			    />
			<TextView 
			    android:layout_width="130dp"
			    android:layout_height="wrap_content"
			    android:gravity="center_horizontal"
			    android:textColor="@color/black"
			    android:textSize="22sp"
			    android:text="参数上传"
			    />
		</LinearLayout>	
    </LinearLayout>	
</LinearLayout>