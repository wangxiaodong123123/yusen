<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:weightSum="11"
	android:background="@drawable/cloud_bg"
	>
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
        <TextView 
	        android:textSize="25sp" 
			android:layout_width="0dp" 
			android:layout_weight="6.1"
			android:layout_height="match_parent" 
			android:textColor="@color/title"
			android:text="云服务->云操作"
			android:gravity="center_vertical"
		/>
		<LinearLayout 
		    android:layout_width="0dp"
		    android:layout_weight="3.2" 
		    android:weightSum="1"
			android:layout_height="match_parent"
		    >
			<TextView
			    android:layout_width="0dp"
		    	android:layout_weight="0.6"
				android:layout_height="match_parent" 
			    android:textSize="25sp"
			    android:id="@+id/user_info"
			    android:gravity="center"
			    android:textColor="@color/title"
			/>
			<Button
			    android:layout_width="0dp"
		    	android:layout_weight="0.4"
				android:layout_height="match_parent" 
				android:textSize="25sp"
				android:text="注销"
				android:background="@drawable/btn_create_bg" 
				android:gravity="center"
				android:id="@+id/usr_logout"
			/>
		</LinearLayout>
    </LinearLayout>
    <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    />
    <LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="3.5"
		android:weightSum="2"
		android:orientation="vertical"
		android:gravity="center"
        >
		<LinearLayout 	
		android:layout_width="fill_parent" 
		android:layout_height="match_parent"
		android:weightSum="5"
		android:orientation="horizontal"
		android:gravity="center" 
		>   
		<LinearLayout 	
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.8"	
	        android:weightSum="11"
	        android:orientation="vertical"
			>  
			<ImageButton
		        android:id="@+id/download_imagebutton_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/download_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center"
		        android:text="数据下载"
		        /> 			
		</LinearLayout>
		<TextView 
		    android:layout_width="0dp"
		    android:layout_weight="0.2"
		    android:layout_height="match_parent"
		    />
		<LinearLayout 	
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.8"	
	        android:weightSum="11"
	        android:orientation="vertical"
			>  
			<ImageButton
		        android:id="@+id/amend_imagebutton_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/amend_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center"
		        android:text="参数修改"
		        /> 			
		</LinearLayout>	
		<TextView 
		    android:layout_width="0dp"
		    android:layout_weight="0.2"
		    android:layout_height="match_parent"
		    />		
		<LinearLayout 	
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.8"	
	        android:weightSum="11"
	        android:orientation="vertical"
			>  
			<ImageButton
		        android:id="@+id/uplaod_imagebutton_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/upload_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center"
		        android:text="参数上传"
		        /> 			
		</LinearLayout>			
    </LinearLayout>	
    </LinearLayout>
</LinearLayout>