<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="5"
    android:orientation="vertical">
    <LinearLayout  
	  android:layout_width="wrap_content"  
	  android:layout_height="0dp"
	  android:layout_weight="1"
	  android:layout_marginRight="20dip"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="合同段名称:"
	        android:textSize="20sp"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	   <Spinner
	       android:layout_width="400dip"
	       android:layout_height="match_parent"
	       android:id="@+id/proj_name_dlg_id"
	       />
	</LinearLayout> 
	<LinearLayout  
	  android:layout_width="wrap_content"  
	 android:layout_height="0dp"
	  android:layout_weight="1"
	  android:layout_marginRight="20dip"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="工程    名称:"
	        android:textSize="20sp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	   <Spinner
	       android:layout_width="400dip"
	       android:layout_height="match_parent"
	       android:id="@+id/eng_name_dlg_id"
	       />
	</LinearLayout> 
	<LinearLayout  
	  android:layout_width="wrap_content"  
	 android:layout_height="0dp"
	  android:layout_weight="1"
	  android:layout_marginRight="20dip"
	  android:id="@+id/grout_priority_ly"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="坑道    选择:"
	        android:textSize="20sp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	   <Spinner
	       android:layout_width="400dip"
	       android:layout_height="match_parent"
	       android:id="@+id/grout_priority_dlg_id"
	       />
	</LinearLayout> 	
	<LinearLayout  
	  android:layout_width="fill_parent"  
	  android:layout_height="0dp"
	  android:layout_weight="1"
	  android:id="@+id/history_record_ly"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="上次采集结束工段:"
	        android:id="@+id/record_tv_id"
	        android:textSize="20sp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	  <TextView 
	        android:textSize="20sp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:id="@+id/end_collect_mileage_id"
       />
	</LinearLayout> 
    <LinearLayout  
	  android:layout_width="wrap_content"  
	  android:layout_height="0dp"
	  android:layout_weight="1"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="起始注浆工段:"
	        android:textSize="20sp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	   <EditText
	       android:layout_width="150dip"
	       android:layout_height="match_parent"
	       android:id="@+id/start_mileage_et1"
	       />
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:textSize="25sp"
	       android:text="+"
	        />     
	   <EditText
	       android:layout_width="150dip"
	       android:layout_height="match_parent"
	       android:id="@+id/start_mileage_et2"
	       />
	   <ImageButton
	       android:layout_marginLeft="5dip"
	       android:layout_width="50dip"
	       android:layout_height="match_parent"
	       android:background="@drawable/search_icon"
	       android:id="@+id/search_start_mileage_id"
	       />
	</LinearLayout> 
	<LinearLayout  
	  android:layout_width="wrap_content"  
	  android:layout_height="0dp"
	  android:layout_weight="1"
	  android:orientation="horizontal"> 
	  <TextView 
	        android:text="终止注浆工段:"
	        android:textSize="20sp"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:gravity="center_vertical"
       />
	   <EditText
	       android:layout_width="150dip"
	       android:layout_height="match_parent"
	       android:id="@+id/end_mileage_et1"
	       />
	   <TextView 
	       android:layout_width="wrap_content"
	       android:layout_height="match_parent"
	       android:textSize="25sp"
	       android:text="+"
	        />     
	   <EditText
	       android:layout_width="150dip"
	       android:layout_height="match_parent"
	       android:id="@+id/end_mileage_et2"
	       />
	   <ImageButton
	       android:layout_marginLeft="5dip"
	       android:layout_width="50dip"
	       android:layout_height="match_parent"
	       android:layout_marginTop="2dp"
	       android:background="@drawable/search_icon"
	       android:id="@+id/search_end_mileage_id"
	       />
	</LinearLayout> 
</LinearLayout>