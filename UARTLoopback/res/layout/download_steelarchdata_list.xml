<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" 
    android:weightSum="11"
    android:id="@+id/layout_id"
    android:background="@drawable/cloud_bg">
 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            />
        <TextView 
	        android:textSize="25sp" 
			android:layout_width="0dp" 
			android:layout_weight="6.3"
			android:layout_height="match_parent" 
			android:textColor="@color/title"
			android:id="@+id/sectionlist_title"
			android:gravity="center_vertical"
		/>  
		<LinearLayout 
	   		android:layout_width="0dp" 
			android:layout_weight="3"
			android:weightSum="1"
			android:layout_height="match_parent" 
	   		android:id="@+id/cloud_info_ly"
	   		android:orientation="horizontal">
			<TextView
			    android:layout_width="0dp"
			    android:layout_weight="0.6" 
				android:layout_height="match_parent" 
			    android:textSize="25sp"
			    android:id="@+id/user_info"
			    android:gravity="center"
			    android:textColor="@color/title"
			/>
	   		<Button 
				android:layout_width="0dp"
			    android:layout_weight="0.4" 
				android:layout_height="match_parent"
				android:textSize="25sp"
				android:background="@drawable/btn_create_bg"
				android:id="@+id/reload_bt"
				android:gravity="center"
				android:text="重新下载"    
			/> 
	   	</LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:weightSum="6"	
		android:gravity="center_horizontal"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"	
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="序号"
            />	      	
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"	
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="钢拱架编号"
            />>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="测量时间"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="实测间距"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="二衬离掌子面距离"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textSize="22sp"
            android:textColor="@android:color/black"
			android:gravity="center"
            android:text="钢拱架离掌子面距离"
            />
    </LinearLayout>
    <View 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
      	android:background="@android:color/black"
      	android:visibility="visible"/>
	<ListView 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="8.95"
	    android:layout_marginLeft="20dip"
	    android:layout_marginRight="20dip"
	    android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
	    android:id="@+id/steelarchdata_listview"
	    />
</LinearLayout>