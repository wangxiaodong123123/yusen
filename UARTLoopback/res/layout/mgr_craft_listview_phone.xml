<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:weightSum="533"
	    android:orientation="horizontal" >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
	        />
		<View
		    android:layout_width="0dp"
		    android:layout_weight="1.5"
		    android:layout_height="match_parent" 
		    android:background="@android:color/black"
		    android:visibility="visible" />	
	        
	   	<TextView
		    android:id="@+id/mgr_steelarch_seq"
		    android:layout_width="0dp"
			android:layout_weight="95"
		    android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:gravity="center"
		    android:textColor="@android:color/black"/>     
  				
		<View
		    android:layout_width="0dp"
			android:layout_weight="1.5"
		    android:layout_height="match_parent" 
		    android:background="@android:color/black"
		    android:visibility="visible" />
		
		<TextView
		    android:id="@+id/mgr_steelarch_name"
		    android:layout_width="0dp"
			android:layout_weight="95"
		    android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:gravity="center"
		    android:textColor="@android:color/black"/>
		
		<View
		    android:layout_width="0dp"
			android:layout_weight="1.5"
		    android:layout_height="match_parent" 
		    android:background="@android:color/black"
		    android:visibility="visible" />
		
		<TextView
		    android:id="@+id/mgr_design_steelarch_to_steelarch_distance"
		    android:layout_width="0dp"
			android:layout_weight="60"
		    android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:gravity="center"
		    android:textColor="@android:color/black"/>
		
		<View
		    android:layout_width="0dp"
			android:layout_weight="1.5"
		    android:layout_height="match_parent" 
		    android:background="@android:color/black"
		    android:visibility="visible" />
		
		<TextView
		    android:id="@+id/mgr_measure_steelarch_to_steelarch_distance"
		    android:layout_width="0dp"
			android:layout_weight="60"
		    android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:gravity="center"
		    android:textColor="@android:color/black" />
		<!-- 钢拱架距掌子面距离 -->
        <View 
            android:layout_width="0dp"
			android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        
        <TextView 
            android:layout_width="0dp"
			android:layout_weight="100"
            android:layout_height="match_parent"
            android:id="@+id/mgr_steelarch_to_tunelface_distance"
            android:textSize="20sp"
            android:gravity="center"
			android:textColor="@android:color/black"/>
        
		<!-- 二衬离掌子面距离 -->
        <View 
            android:layout_width="0dp"
			android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
       
        <TextView 
            android:layout_width="0dp"
			android:layout_weight="100"
            android:layout_height="match_parent"
            android:id="@+id/mgr_secondcar_to_tunelface_distance"
            android:textSize="20sp"
            android:gravity="center"
			android:textColor="@android:color/black"/>
        	
		<View
		    android:layout_width="0dp"
			android:layout_weight="1"
		    android:layout_height="match_parent" 
		    android:background="@android:color/black"
		    android:visibility="visible" /> 
	</LinearLayout>
 	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:weightSum="533"
    	android:orientation="horizontal"
        >
	    <TextView 
	        android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_weight="7"
	        />
	    <View
	        android:layout_width="0dp"
	        android:layout_weight="520"
	        android:layout_height="1.5dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
    </LinearLayout>  
</LinearLayout>
