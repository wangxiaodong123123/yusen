<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="11"
    android:background="@drawable/main_bg"
    >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageView 
	        android:layout_width="128dp" 
			android:layout_height="match_parent"
			android:background="@drawable/company_logo"
	    />
	    <TextView 
	        android:textSize="35sp" 
	        android:id="@+id/main_title_id"
			android:layout_width="wrap_content" 
			android:layout_height="match_parent" 
			android:textColor="#5a5191"
			android:gravity="center_vertical"
			android:text="YS200钢拱架智能测控系统"
		/> 
  	</LinearLayout>
  	<TextView 
  	    android:layout_width="fill_parent"
  	    android:layout_height="0dp"
  	    android:layout_weight="1"
  	    />
	    <LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="0dp"
	       android:orientation="horizontal"
	       android:layout_weight="3.5"
		   android:weightSum="12"	
		   android:gravity="center_horizontal"       
	       >
		   <LinearLayout 
		       android:layout_width="0dp"
		       android:layout_height="fill_parent"
		       android:layout_weight="2.5"	
		       android:weightSum="11"
		       android:orientation="vertical"
		       android:gravity="center_horizontal"
		      >
		      <ImageButton
		        android:id="@+id/param_set_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/param_send_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center_horizontal"
		        android:text="钢拱架参数传输"
		        /> 
		   </LinearLayout>
		   <TextView 
		       android:layout_width="0dp"
		       android:layout_weight="0.4"
		       android:layout_height="match_parent"
		       />
		   <LinearLayout 
		       android:layout_width="0dp"
		       android:layout_height="fill_parent"
		       android:layout_weight="2.5"	
		       android:weightSum="11"
		       android:orientation="vertical"
		       android:gravity="center_horizontal"
		      >
		      <ImageButton
		        android:id="@+id/data_collect_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/data_collect_nowords_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center_horizontal"
		        android:text="钢拱架数据采集"
		        /> 
		   </LinearLayout> 
		   <TextView 
		       android:layout_width="0dp"
		       android:layout_weight="0.4"
		       android:layout_height="match_parent"
		       />
		   <LinearLayout 
		       android:layout_width="0dp"
		       android:layout_height="fill_parent"
		       android:layout_weight="2.5"	
		       android:weightSum="11"
		       android:orientation="vertical"
		       android:gravity="center_horizontal"
		      >
		      <ImageButton
		        android:id="@+id/data_manager_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/data_manager_nowords_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center_horizontal"
		        android:text="钢拱架数据管理"
		        /> 
		   </LinearLayout>		   
	     </LinearLayout>	         
		<LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="0dp"
	       android:orientation="horizontal"
	       android:layout_weight="3.5"
	       android:layout_marginTop="20dp"
	       android:weightSum="12"	
	       android:gravity="center_horizontal"
	       >
		   <LinearLayout 
		       android:layout_width="0dp"
		       android:layout_height="fill_parent"
		       android:layout_weight="2.5"	
		       android:weightSum="11"
		       android:orientation="vertical"
		       android:gravity="center_horizontal"
		      >
		      <ImageButton
		        android:id="@+id/manual_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/manual_nowords_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center_horizontal"
		        android:text="操作手册"
		        /> 
		   </LinearLayout>
		   <TextView 
		       android:layout_width="0dp"
		       android:layout_weight="0.4"
		       android:layout_height="match_parent"
		       />
		   <LinearLayout 
		       android:layout_width="0dp"
		       android:layout_height="fill_parent"
		       android:layout_weight="2.5"	
		       android:weightSum="11"
		       android:orientation="vertical"
		       android:gravity="center_horizontal"
		      >
		      <ImageButton
		        android:id="@+id/admin_id"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="9"
		        android:background="@drawable/cloud_icon" />
		      <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#ffffff"
		        android:textSize="25sp" 
		        android:layout_weight="2"
		        android:gravity="center_horizontal"
		        android:text="云服务"
		        /> 
		   </LinearLayout>		   
	     </LinearLayout>	         	     
</LinearLayout>
    