<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/anchor_stastic_table_layout"
    android:orientation="vertical" >
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:weightSum="922"
	    android:orientation="horizontal" >
	    <TextView 
	   	    android:layout_width="0dp"
	   	    android:layout_weight="10"
	   	    android:layout_height="match_parent"
	   	    />
    	<!-- 型号 -->
        <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
   	  	    android:layout_weight="180"
            android:layout_height="match_parent"
            android:id="@+id/stastic_type"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>
		<!-- 类型 -->
        <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
   	  	    android:layout_weight="150"
            android:layout_height="match_parent"
            android:id="@+id/stastic_model"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>
       <!-- 设计根数-->
        <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <TextView 
            android:layout_width="0dp"
   	  	    android:layout_weight="180"
            android:layout_height="match_parent"
            android:id="@+id/stastic_design_sums"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
			android:textColor="@android:color/black"/>
        <!-- 设计数量 -->
        <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
		<RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="180"
            android:layout_height="match_parent"
            >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/stastic_design_length"
	            android:textSize="20sp"
	            android:layout_gravity="center_vertical"
	            android:gravity="center"
				android:textColor="@android:color/black"/>
			<LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:weightSum="2"
	            android:orientation="horizontal"
	            >
		        <Button 
			        android:layout_width="0dp"
		   	  	    android:layout_weight="1"
		            android:layout_height="match_parent"
			        android:id="@+id/confirm_bt"
			        android:textSize="12sp"
			        android:text="确定"
			        android:visibility="gone"
			         />   
			    <Button 
			        android:layout_width="0dp"
		   	  	    android:layout_weight="1"
		            android:layout_height="match_parent"
			        android:id="@+id/cancel_bt"
			        android:textSize="12sp"
			        android:text="取消"
			        android:visibility="gone"
			         /> 
	        </LinearLayout>
		</RelativeLayout>          
        <!-- 备注 -->
        <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
        <RelativeLayout 
            android:layout_width="0dp"
   	  	    android:layout_weight="203"
            android:layout_height="match_parent"
            >
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/stastic_remark"
	            android:textSize="20sp"
	            android:layout_gravity="center_vertical"
	            android:gravity="center"
				android:textColor="@android:color/black"/>
	        <EditText
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:id="@+id/stastic_remark_et"
		        android:textSize="12sp"
		        android:textColor="@android:color/black"
		        android:visibility="gone"/>
	    </RelativeLayout>         
       <View 
            android:layout_width="0dp"
   	  	    android:layout_weight="1.5"
            android:layout_height="match_parent"
        	android:background="@android:color/black"
        	android:visibility="visible"/>
    </LinearLayout>
	<LinearLayout 
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:weightSum="922"
   	    android:orientation="horizontal"
   	    >
   	  	<TextView 
   	  	    android:layout_width="0dp"
   	  	    android:layout_weight="10"
        	android:layout_height="match_parent"
   	  	    />
	   	<View
	        android:layout_width="0dp"
	        android:layout_weight="902"
	        android:layout_height="1dp"
	        android:background="@android:color/black"
	        android:visibility="visible"/>  
   	</LinearLayout>
</LinearLayout>